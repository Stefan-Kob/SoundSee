@model SoundSee.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Sign In";
}

<h1 class="col-md-6">Sign In to SoundSee</h1>
@using (Html.BeginForm("SignIn", "User", FormMethod.Post))
{
    <fieldset>
        <p><i>Please enter your account details:</i></p>

        <div>
            *
            <label for="Email" class="form-label mt-3">Email address</label>
            <input asp-for="User.Email" type="Email" id="Email" name="Email" class="form-control" aria-describedby="emailHelp" placeholder="johndoe@email.com">
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
        <div>
            *
            <label for="Password" class="form-label mt-2">Password</label>
            <input asp-for="User.Password" type="password" id="Password" name="Password" class="form-control" placeholder="Password" autocomplete="off">
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>

    <small id="emailHelp" class="form-text text-muted">We do not share any of this data.</small>
}